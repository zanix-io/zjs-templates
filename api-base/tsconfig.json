{
  "extends": "@zanix/std-config/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "services": ["src/core/services/index"],
      "services/*": ["src/core/services/*"],
      "adapters": ["src/core/adapters/index"],
      "adapters/*": ["src/core/adapters/*"],
      "models/*": ["src/core/adapters/data/(models)/*"],
      "providers/*": ["src/core/adapters/interactors/providers/*"],
      "clients/*": ["src/core/adapters/interactors/clients/*"],
      "app/utils/*": ["src/shared/utils/*"],
      "app/utils": ["src/shared/utils/index"],
      "middlewares": ["src/shared/middlewares/index"],
      "middlewares/*": ["src/shared/middlewares/*"],
      "rtos": ["src/shared/rtos/index"],
      "rtos/*": ["src/shared/rtos/*"]
    }
  }
}
